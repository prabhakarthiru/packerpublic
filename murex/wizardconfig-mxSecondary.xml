                <property name="site" value="site1" type="java.lang.String" description="Site name" useWizardDefault="false"/>
                <property name="murexNetPort" value="10003" type="java.lang.Integer" description="Murexnet port number" useWizardDefault="false"/>
                <property name="ds_clientlib_path" value="/nettools/datasynapse/gridserver.6.1/lib64" type="java.lang.String" description="TIBCO gridserver default Libraries path" useWizardDefault="false"/>
                <property name="sym_clientlib_path" value="/nettools/symphony/7.1/symphonyClient/Client71/lib64" type="java.lang.String" description="IBM Platform Symphony default Libraries path" useWizardDefault="false"/>
            </properties>
        </page>
        <page>
            <id>CoreNameFormat</id>
            <description>Core Name Format</description>
            <properties>
                <property name="coreNameFormat" value="false" type="java.lang.Boolean" description="Core Name Format Enabled" useWizardDefault="false"/>
            </properties>
        </page>
        <page>
            <id>fs.page</id>
            <description>File server Settings</description>
            <properties>
                <property name="fsHost" value="MUREXHOSTNAME" type="java.lang.String" description="Host name" useWizardDefault="false"/>
                <property name="fsPort" value="10000" type="java.lang.String" description="Port number" useWizardDefault="false"/>
            </properties>
        </page>
    </pages>
</wizardConfig>
